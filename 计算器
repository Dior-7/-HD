#include<iostream>
using namespace std;
int main()
{
	int a,b;
	char c;
	cout<<"请输入例如1+3、1-3、1*3、1/3等形式"<<endl; 
	cin>>a>>c>>b;
	if(c=='+')
		cout<<a+b<<endl; 
	else if(c=='-')
		cout<<a-b<<endl; 
	else if(c=='*')
		cout<<a*b<<endl; 
	else if(c=='/')
	{
		if(b!=0)
			cout<<a/b<<endl; 
		else
			cout<<"除数不能为零"<<endl; 
	}
	else
		cout<<"输入的运算符不合法"<<endl; 
	return 0;
} 
//顺序结构、选择结构的使用 
