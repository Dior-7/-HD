#include<bits/stdc++.h>
using namespace std;
int a[10][10]={0};
int main()
{
	string s1,s2;
	cin>>s1>>s2;
//	cout<<s1.length()<<endl;
	for(int i=1;i<=s1.length();i++)
	{
		for(int j=1;j<=s2.length();j++)
		{
			if(s1[i-1]==s2[j-1])
			a[i][j]=a[i-1][j-1]+1;
			else
			a[i][j]=max(a[i][j-1],a[i-1][j]);			
		}
	}
	cout<<a[s1.length()][s2.length()]<<endl;
	
	string s3;
	for(int i=s1.length();i>=0;i--)
	{
		for(int j=s2.length();j>=0;j--)
		{
			if(s1[i]!=s2[j])
			{
				if (a[i][j-1]<a[i-1][j])
				{
					i--;j++;
				}			
			}
			else {
				s3=s1[i]+s3;
				
				i--;
				
			}
			
			
		}
	
	}
	cout<<s3<<endl;
	return 0;
 } 
